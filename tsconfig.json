{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "strictNullChecks": true,
        "outDir": "./built",
        "noImplicitAny": true,
        "sourceMap": true,
        "allowJs": true,
        "target": "es6",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
